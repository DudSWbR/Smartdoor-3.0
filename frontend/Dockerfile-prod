#build environment 
FROM node:12.18.1-alpine
WORKDIR /
ENV PATH /node_modules/.bin:$PATH
COPY package.json /package.json
RUN apk add bash
RUN yarn install
RUN yarn add react-scripts@3.0.1 -g
COPY . ./
RUN yarn build

#production environment
FROM nginx:1.16.0-alpine
COPY nginx/nginx.conf /nginx/nginx
COPY nginx/default.conf /nginx/nginx
WORKDIR /
COPY build /
EXPOSE 80